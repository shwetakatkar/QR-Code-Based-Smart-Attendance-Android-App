<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
                <solid android:color="@color/skyblue"></solid>
                <corners android:radius="100dp" />
            </shape>
        </item>

        <item>
            <shape android:shape="rectangle">
                <gradient android:endColor="@color/blue1"   android:centerColor="@color/skyblue" android:startColor="@color/blue2" />
                <corners android:radius="100dp" />
            </shape>
        </item>
    </selector>
