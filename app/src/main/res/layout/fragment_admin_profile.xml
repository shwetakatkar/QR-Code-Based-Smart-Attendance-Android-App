<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawableEnd="@drawable/edit"
        android:elevation="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Edit aProfile"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#2962FF"
        android:textSize="18sp"
        app:iconPadding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/profile_background"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        app:srcCompat="@drawable/profile" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/grad" />

        <TextView
            android:id="@+id/aName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/name"
            android:drawablePadding="20dp"
            android:text="Admin Name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/aEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/email"
            android:drawablePadding="20dp"
            android:text="Email ID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/contact_no"
            android:drawablePadding="20dp"
            android:text="Mobile Number"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/aBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/birthdate"
            android:drawablePadding="20dp"
            android:text="Birthdate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aOrganizationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/organisation"
            android:drawablePadding="20dp"
            android:text="Organisation Name"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/aAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/address"
            android:drawablePadding="20dp"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:scrollbars="horizontal"
            android:text="Address"
            android:textSize="20sp" />


        <Button
            android:id="@+id/alogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="120dp"
            android:fontFamily="sans-serif-medium"
            android:text="Logout"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>