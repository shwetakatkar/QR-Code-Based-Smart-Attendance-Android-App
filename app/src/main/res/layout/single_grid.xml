<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
   android:layout_gravity="center"
    android:elevation="4dp"
    android:layout_margin="10dp"
    android:background="@drawable/gridtext_bg"
    >


    <ImageView
        android:id="@+id/class_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/classicon_bg"
        app:srcCompat="@drawable/class_image" />

    <TextView
        android:id="@+id/classes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_icon"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/yatra_one"
        android:text="Class Name"
        android:textColor="@color/white"
        android:textSize="39sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/class_icon"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total_students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:elevation="10dp"
            android:text="Total Students :"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/total_teachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:text="Total Students :"
            android:textColor="@color/dark_blue"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/total_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:text="Total Students :"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
